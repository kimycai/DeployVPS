#安装youtube-dl
apt-get update
apt-get -y install python-minimal
apt-get -y install python-pip
sudo pip install youtube-dl
apt-get -y install ffmpeg
youtube-dl -U

sudo wget https://yt-dl.org/downloads/latest/youtube-dl -O /usr/local/bin/youtube-dl
sudo chmod a+rx /usr/local/bin/youtube-dl

youtube-dl
--batch-file FILE
--write-sub
--format best
--embed-subs
--convert-subs FORMAT
--sub-format FORMAT srt|ass


youtube-dl --write-sub --convert-subs ass --format best http://www.bbc.co.uk/iplayer/cbeebies/episode/b036mwgh/alphablocks-series-4-12-birthday-girl
TillyandFriends

批量下载
wget https://raw.githubusercontent.com/kimycai/DeployVPS/master/sarah-duck-series-b04drklx
youtube-dl --write-sub --convert-subs ass -f best --batch-file sarah-duck-series-b04drklx
